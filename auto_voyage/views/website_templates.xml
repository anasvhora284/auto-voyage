<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Website Menu -->
    <record id="menu_auto_voyage_website" model="website.menu">
        <field name="name">Auto Voyage</field>
        <field name="url">/</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
    </record>
    
    <record id="menu_auto_voyage_services" model="website.menu">
        <field name="name">Services</field>
        <field name="url">/services</field>
        <field name="parent_id" ref="menu_auto_voyage_website"/>
        <field name="sequence" type="int">10</field>
    </record>
    
    <record id="menu_auto_voyage_providers" model="website.menu">
        <field name="name">Service Providers</field>
        <field name="url">/service-providers</field>
        <field name="parent_id" ref="menu_auto_voyage_website"/>
        <field name="sequence" type="int">20</field>
    </record>
    
    <record id="menu_auto_voyage_booking" model="website.menu">
        <field name="name">Book Service</field>
        <field name="url">/booking</field>
        <field name="parent_id" ref="menu_auto_voyage_website"/>
        <field name="sequence" type="int">30</field>
    </record>
    
    <record id="menu_auto_voyage_my_vehicles" model="website.menu">
        <field name="name">My Vehicles</field>
        <field name="url">/my/vehicles</field>
        <field name="parent_id" ref="menu_auto_voyage_website"/>
        <field name="sequence" type="int">40</field>
    </record>
    
    <record id="menu_auto_voyage_my_services" model="website.menu">
        <field name="name">My Services</field>
        <field name="url">/my/service-requests</field>
        <field name="parent_id" ref="menu_auto_voyage_website"/>
        <field name="sequence" type="int">50</field>
    </record>
    
    <record id="menu_auto_voyage_about" model="website.menu">
        <field name="name">About Us</field>
        <field name="url">/about</field>
        <field name="parent_id" ref="menu_auto_voyage_website"/>
        <field name="sequence" type="int">60</field>
    </record>
    
    <record id="menu_auto_voyage_contact" model="website.menu">
        <field name="name">Contact</field>
        <field name="url">/contact</field>
        <field name="parent_id" ref="menu_auto_voyage_website"/>
        <field name="sequence" type="int">70</field>
    </record>
    
    <!-- Website Homepage -->
    <template id="homepage" name="Auto Voyage Homepage">
        <t t-call="website.layout">
            <div class="oe_structure">
                <!-- Hero Section -->
                <section class="s_banner bg-primary pb48 pt48" style="background-image: url('/auto_voyage/static/src/img/hero-bg.jpg'); background-size: cover; background-position: center;">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-7 text-white">
                                <h1 class="display-4 mb-3">Your Vehicle Care Specialists</h1>
                                <p class="lead mb-4">Professional services, transparent pricing, and exceptional customer care. Schedule your service today!</p>
                                <div class="pt16 pb16">
                                    <a href="/booking" class="btn btn-lg btn-light">Book Now</a>
                                    <a href="/services" class="btn btn-lg btn-outline-light ms-2">Our Services</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                
                <!-- Services Section -->
                <section class="pt48 pb48">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2 class="display-5">Our Services</h2>
                                <p class="lead">Comprehensive vehicle care solutions tailored to your needs</p>
                            </div>
                        </div>
                        <div class="row">
                            <t t-foreach="services" t-as="service">
                                <div class="col-md-4 mb-4">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-body text-center">
                                            <i t-attf-class="fa fa-fw fa-3x mb-3 text-primary {{service.icon or 'fa-wrench'}}"/>
                                            <h4 t-esc="service.name"/>
                                            <p t-esc="service.description"/>
                                            <div class="mt-auto pt-3">
                                                <span class="badge bg-light text-dark">
                                                    <t t-esc="service.category.capitalize()"/>
                                                </span>
                                                <span class="ms-2 text-primary fw-bold">
                                                    <t t-esc="service.price" t-options='{"widget": "monetary", "display_currency": service.currency_id}'/>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent border-top-0">
                                            <a href="/booking" class="btn btn-outline-primary w-100">Book Service</a>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12 text-center">
                                <a href="/services" class="btn btn-primary">View All Services</a>
                            </div>
                        </div>
                    </div>
                </section>
                
                <!-- Why Choose Us Section -->
                <section class="pt48 pb48 bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2 class="display-5">Why Choose Auto Voyage?</h2>
                                <p class="lead">We're committed to excellence in vehicle care</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa fa-tools fa-3x mb-3 text-primary"/>
                                        <h4>Expert Technicians</h4>
                                        <p>Our certified technicians have years of experience working with all vehicle makes and models.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa fa-clock fa-3x mb-3 text-primary"/>
                                        <h4>Convenient Scheduling</h4>
                                        <p>Book online or through our app, track your service in real-time, and get notified when it's ready.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa fa-shield-alt fa-3x mb-3 text-primary"/>
                                        <h4>Warranty Guaranteed</h4>
                                        <p>All our services come with comprehensive warranties and satisfaction guarantees.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                
                <!-- Providers Section -->
                <section class="pt48 pb48">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2 class="display-5">Our Service Providers</h2>
                                <p class="lead">Meet our expert team dedicated to quality service</p>
                            </div>
                        </div>
                        <div class="row">
                            <t t-foreach="providers" t-as="provider">
                                <div class="col-md-4 mb-4">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-body text-center">
                                            <div class="mb-3">
                                                <img t-if="provider.image" t-att-src="image_data_uri(provider.image)" class="rounded-circle" width="100" height="100" alt="Service Provider"/>
                                                <img t-else="" src="/auto_voyage/static/src/img/default_provider.png" class="rounded-circle" width="100" height="100" alt="Service Provider"/>
                                            </div>
                                            <h4 t-esc="provider.partner_id.name"/>
                                            <p><span class="badge bg-primary" t-esc="provider.expertise_level.replace('_', ' ').title()"/> Expertise</p>
                                            <div class="mb-2">
                                                <span class="fw-bold">Services: </span>
                                                <t t-foreach="provider.service_ids" t-as="service">
                                                    <span class="badge bg-light text-dark me-1" t-esc="service.name"/>
                                                </t>
                                            </div>
                                            <p t-if="provider.rating" class="text-warning">
                                                <t t-foreach="range(int(provider.rating))" t-as="star">
                                                    <i class="fa fa-star"/>
                                                </t>
                                                <t t-if="provider.rating % 1 > 0">
                                                    <i class="fa fa-star-half-alt"/>
                                                </t>
                                                <span class="text-dark ms-1">(<t t-esc="'%.1f' % provider.rating"/>)</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>
                
                <!-- Call to Action Section -->
                <section class="pt48 pb48 bg-primary text-white">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-8 mx-auto text-center">
                                <h2 class="display-5 mb-4">Ready to experience quality service?</h2>
                                <p class="lead mb-4">Join thousands of satisfied customers who trust Auto Voyage with their vehicles.</p>
                                <a href="/booking" class="btn btn-lg btn-light">Book a Service Now</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
    
    <!-- Services Page -->
    <template id="services_page" name="Services Page">
        <t t-call="website.layout">
            <div class="oe_structure">
                <!-- Hero Section -->
                <section class="s_text_image pt48 pb24 o_colored_level bg-light">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-12 text-center">
                                <h1>Our Services</h1>
                                <p class="lead">Comprehensive vehicle care solutions for every need</p>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Services Categories Section -->
                <section class="pt32 pb48">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2>Service Categories</h2>
                                <p class="lead">Browse our services by category</p>
                            </div>
                        </div>
                        <div class="row g-4">
                            <t t-foreach="categories" t-as="category">
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body text-center">
                                            <t t-if="category.icon">
                                                <i t-att-class="'fa fa-' + category.icon + ' fa-3x text-primary mb-3'"/>
                                            </t>
                                            <h3 class="h5" t-esc="category.name"/>
                                            <p class="text-muted" t-esc="category.description"/>
                                            <a href="/services" class="btn btn-outline-primary mt-3">View Services</a>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>

                <!-- All Services Section -->
                <section class="pt48 pb48 bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2>All Services</h2>
                                <p class="lead">Explore our complete range of services</p>
                            </div>
                        </div>
                        <div class="row g-4">
                            <t t-foreach="services" t-as="service">
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-3">
                                                <t t-if="service.icon">
                                                    <i t-att-class="'fa fa-' + service.icon + ' fa-2x text-primary me-3'"/>
                                                </t>
                                                <div>
                                                    <h3 class="h5 mb-1" t-esc="service.name"/>
                                                    <span class="badge bg-primary" t-esc="service.category_id.name"/>
                                                </div>
                                            </div>
                                            <p class="text-muted mb-3" t-esc="service.description"/>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <span class="text-primary fw-bold" t-esc="format_currency(service.price)"/>
                                                    <span class="text-muted ms-2" t-esc="'Est. ' + service.estimated_duration + ' min'"/>
                                                </div>
                                                <a href="/booking" class="btn btn-primary">Book Now</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>

                <!-- Service Features Section -->
                <section class="pt48 pb48">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2>Why Choose Our Services?</h2>
                                <p class="lead">Experience the difference with our professional service</p>
                            </div>
                        </div>
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="d-flex align-items-start">
                                    <i class="fa fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h3 class="h5">Expert Technicians</h3>
                                        <p>Our certified professionals have years of experience working with all vehicle makes and models.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-start">
                                    <i class="fa fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h3 class="h5">Quality Parts</h3>
                                        <p>We use only high-quality, manufacturer-approved parts for all repairs and replacements.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-start">
                                    <i class="fa fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h3 class="h5">Warranty Coverage</h3>
                                        <p>All our services come with comprehensive warranty coverage for your peace of mind.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Service Process Section -->
                <section class="pt48 pb48 bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2>Our Service Process</h2>
                                <p class="lead">Simple and efficient service delivery</p>
                            </div>
                        </div>
                        <div class="row g-4">
                            <div class="col-md-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                            <span class="h4 mb-0">1</span>
                                        </div>
                                        <h3 class="h5">Book Service</h3>
                                        <p class="text-muted">Choose your service and schedule a convenient time slot.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                            <span class="h4 mb-0">2</span>
                                        </div>
                                        <h3 class="h5">Vehicle Drop-off</h3>
                                        <p class="text-muted">Bring your vehicle to our service center or request pickup.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                            <span class="h4 mb-0">3</span>
                                        </div>
                                        <h3 class="h5">Service</h3>
                                        <p class="text-muted">Our experts perform the required service with care.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                            <span class="h4 mb-0">4</span>
                                        </div>
                                        <h3 class="h5">Pick-up</h3>
                                        <p class="text-muted">Collect your vehicle or request delivery service.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Call to Action -->
                <section class="pt48 pb48">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8 text-center">
                                <h2>Ready to Book a Service?</h2>
                                <p class="lead mb-4">Choose from our wide range of professional vehicle services.</p>
                                <a href="/booking" class="btn btn-primary btn-lg">Book a Service Now</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
    
    <!-- About Page -->
    <template id="about_page" name="About Page">
        <t t-call="website.layout">
            <div class="oe_structure">
                <section class="s_text_image pt48 pb24 o_colored_level bg-light">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-12 text-center">
                                <h1>About Auto Voyage</h1>
                                <p class="lead">Your trusted partner for vehicle care and maintenance</p>
                            </div>
                        </div>
                    </div>
                </section>
                
                <section class="pt32 pb32">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-6">
                                <h2>Our Story</h2>
                                <p>Founded in 2010, Auto Voyage has grown from a small local shop to a nationwide network of service centers. Our journey has been driven by a passion for excellent service and customer satisfaction.</p>
                                <p>We started with a simple mission: to provide transparent, high-quality vehicle services at fair prices. That mission continues to drive everything we do today.</p>
                                <h2 class="mt-4">Our Values</h2>
                                <ul>
                                    <li><strong>Integrity:</strong> Honest pricing, transparent service, and no unnecessary work.</li>
                                    <li><strong>Excellence:</strong> Continuous training and the latest technology for superior service.</li>
                                    <li><strong>Customer-First:</strong> Your convenience and satisfaction are our top priorities.</li>
                                    <li><strong>Sustainability:</strong> Eco-friendly practices and responsible waste management.</li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <img src="/auto_voyage/static/src/img/about.jpg" class="img-fluid rounded shadow" alt="About Auto Voyage"/>
                            </div>
                        </div>
                    </div>
                </section>
                
                <section class="pt32 pb32 bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2>Our Commitment to You</h2>
                                <p class="lead">What sets us apart from other service providers</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa fa-certificate fa-3x mb-3 text-primary"/>
                                        <h4>Quality Guaranteed</h4>
                                        <p>Every service comes with our satisfaction guarantee. If you're not happy, we'll make it right.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa fa-dollar-sign fa-3x mb-3 text-primary"/>
                                        <h4>Fair Pricing</h4>
                                        <p>Transparent pricing with no hidden fees. You'll always know what you're paying for upfront.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa fa-headset fa-3x mb-3 text-primary"/>
                                        <h4>Customer Support</h4>
                                        <p>Our friendly team is always available to answer your questions and address concerns.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
    
    <!-- Contact Page -->
    <template id="contact_page" name="Contact Page">
        <t t-call="website.layout">
            <div class="oe_structure">
                <section class="s_text_image pt48 pb24 o_colored_level bg-light">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-12 text-center">
                                <h1>Contact Us</h1>
                                <p class="lead">We're here to help with all your vehicle care needs</p>
                            </div>
                        </div>
                    </div>
                </section>
                
                <section class="pt32 pb48">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6">
                                <h2>Get in Touch</h2>
                                <p class="mb-4">Have questions or need assistance? Reach out to our customer service team.</p>
                                
                                <div class="mb-4">
                                    <h5><i class="fa fa-map-marker-alt text-primary me-2"></i> Visit Us</h5>
                                    <p>
                                        123 Service Road<br/>
                                        Automotive District<br/>
                                        Vehicle City, VC 12345
                                    </p>
                                </div>
                                
                                <div class="mb-4">
                                    <h5><i class="fa fa-phone text-primary me-2"></i> Call Us</h5>
                                    <p>
                                        Main: (555) 123-4567<br/>
                                        Service: (555) 987-6543<br/>
                                        Emergency: (555) 789-0123
                                    </p>
                                </div>
                                
                                <div class="mb-4">
                                    <h5><i class="fa fa-envelope text-primary me-2"></i> Email Us</h5>
                                    <p>
                                        General Inquiries: info@autovoyage.com<br/>
                                        Service Requests: service@autovoyage.com<br/>
                                        Support: help@autovoyage.com
                                    </p>
                                </div>
                                
                                <div class="mb-4">
                                    <h5><i class="fa fa-clock text-primary me-2"></i> Hours of Operation</h5>
                                    <p>
                                        Monday - Friday: 8:00 AM - 6:00 PM<br/>
                                        Saturday: 9:00 AM - 5:00 PM<br/>
                                        Sunday: Closed
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="card shadow">
                                    <div class="card-header bg-primary text-white">
                                        <h4 class="mb-0">Send Us a Message</h4>
                                    </div>
                                    <div class="card-body">
                                        <form action="/website/form/submit" method="post" class="o_website_form" data-success-page="/contact?submitted=1">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <input type="hidden" name="model_name" value="mail.mail"/>
                                            
                                            <div class="mb-3">
                                                <label for="name" class="form-label">Your Name</label>
                                                <input type="text" class="form-control" name="name" id="name" required="required"/>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label for="email" class="form-label">Email Address</label>
                                                <input type="email" class="form-control" name="email_from" id="email" required="required"/>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label for="phone" class="form-label">Phone Number</label>
                                                <input type="tel" class="form-control" name="phone" id="phone"/>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label for="subject" class="form-label">Subject</label>
                                                <input type="text" class="form-control" name="subject" id="subject" required="required"/>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label for="message" class="form-label">Message</label>
                                                <textarea class="form-control" name="body_html" id="message" rows="5" required="required"></textarea>
                                            </div>
                                            
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-primary">Send Message</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                
                <t t-if="request.params.get('submitted')">
                    <section class="py-3 bg-success text-white">
                        <div class="container">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h3><i class="fa fa-check-circle me-2"></i> Thank you for contacting us!</h3>
                                    <p>We have received your message and will respond shortly.</p>
                                </div>
                            </div>
                        </div>
                    </section>
                </t>
            </div>
        </t>
    </template>
    
    <!-- Service Providers Page -->
    <template id="providers_page" name="Service Providers Page">
        <t t-call="website.layout">
            <div class="oe_structure">
                <section class="s_text_image pt48 pb24 o_colored_level bg-light">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-12 text-center">
                                <h1>Our Service Providers</h1>
                                <p class="lead">Meet our expert team of certified technicians</p>
                            </div>
                        </div>
                    </div>
                </section>
                
                <section class="pt32 pb48">
                    <div class="container">
                        <div class="row g-4">
                            <t t-foreach="providers" t-as="provider">
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-body text-center">
                                            <div class="mb-3">
                                                <img t-if="provider.image" t-att-src="image_data_uri(provider.image)" class="rounded-circle" width="120" height="120" alt="Service Provider"/>
                                                <img t-else="" src="/auto_voyage/static/src/img/default_provider.png" class="rounded-circle" width="120" height="120" alt="Service Provider"/>
                                            </div>
                                            <h3 t-esc="provider.partner_id.name" class="h4 mb-2"/>
                                            <div class="mb-2">
                                                <span class="badge bg-primary" t-esc="provider.expertise_level.replace('_', ' ').title()"/> 
                                                <span t-if="provider.available" class="badge bg-success ms-1">Available</span>
                                                <span t-else="" class="badge bg-danger ms-1">Unavailable</span>
                                            </div>
                                            <p t-if="provider.rating" class="text-warning mb-3">
                                                <t t-foreach="range(5)" t-as="star">
                                                    <i t-if="star &lt; int(provider.rating)" class="fa fa-star"></i>
                                                    <i t-elif="star == int(provider.rating) and provider.rating % 1 &gt; 0" class="fa fa-star-half-alt"></i>
                                                    <i t-else="" class="far fa-star"></i>
                                                </t>
                                                <span class="text-dark ms-1">(<t t-esc="'%.1f' % provider.rating"/> - <t t-esc="provider.total_services"/> services)</span>
                                            </p>
                                            <div class="mb-3">
                                                <h5 class="h6">Specializations</h5>
                                                <div class="d-flex flex-wrap justify-content-center">
                                                    <t t-foreach="provider.service_ids" t-as="service">
                                                        <span class="badge bg-light text-dark m-1" t-esc="service.name"/>
                                                    </t>
                                                </div>
                                            </div>
                                            <div class="mb-2">
                                                <h5 class="h6">Work Schedule</h5>
                                                <p class="mb-0 small" t-esc="provider.work_schedule.replace('_', ' ').title()"/>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <a href="/booking" class="btn btn-primary w-100">Book with this Provider</a>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>
                
                <!-- Ratings and Reviews Section -->
                <section class="pt48 pb48 bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2>Recent Reviews</h2>
                                <p class="lead">See what our customers say about our service providers</p>
                            </div>
                        </div>
                        <div class="row g-4">
                            <t t-foreach="ratings" t-as="rating">
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-3">
                                                <img t-if="rating.provider_id.image" t-att-src="image_data_uri(rating.provider_id.image)" class="rounded-circle me-3" width="50" height="50" alt="Provider"/>
                                                <img t-else="" src="/auto_voyage/static/src/img/default_provider.png" class="rounded-circle me-3" width="50" height="50" alt="Provider"/>
                                                <div>
                                                    <h5 class="mb-0" t-esc="rating.provider_id.partner_id.name"/>
                                                    <p class="small text-muted mb-0">
                                                        <t t-if="rating.service_id">
                                                            <t t-esc="rating.service_id.name"/>
                                                        </t>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <p class="text-warning mb-1">
                                                    <t t-foreach="range(5)" t-as="star">
                                                        <i t-if="star &lt; int(rating.overall_rating)" class="fa fa-star"></i>
                                                        <i t-elif="star == int(rating.overall_rating) and rating.overall_rating % 1 &gt; 0" class="fa fa-star-half-alt"></i>
                                                        <i t-else="" class="far fa-star"></i>
                                                    </t>
                                                    <span class="text-dark ms-1">(<t t-esc="'%.1f' % rating.overall_rating"/>)</span>
                                                </p>
                                                <div class="d-flex flex-wrap mb-2">
                                                    <div class="me-3">
                                                        <span class="small text-muted">Quality:</span>
                                                        <span class="small" t-esc="rating.service_quality"/>
                                                    </div>
                                                    <div class="me-3">
                                                        <span class="small text-muted">Timeliness:</span>
                                                        <span class="small" t-esc="rating.timeliness"/>
                                                    </div>
                                                    <div>
                                                        <span class="small text-muted">Value:</span>
                                                        <span class="small" t-esc="rating.value_rating"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <p t-esc="rating.comment"/>
                                            <div class="d-flex justify-content-between align-items-center mt-3">
                                                <small class="text-muted" t-esc="rating.partner_id.name"/>
                                                <small class="text-muted" t-field="rating.create_date" t-options='{"widget": "date"}'/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo> 