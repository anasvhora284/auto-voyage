<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- About Page -->
    <template id="about_page" name="About Us Page">
        <t t-call="website.layout">
            <div class="oe_structure">
                <!-- Hero Section -->
                <section class="s_text_image pt48 pb24 o_colored_level bg-light">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-12 text-center">
                                <h1>About Auto Voyage</h1>
                                <p class="lead">Your trusted partner in vehicle maintenance and repair</p>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Our Story Section -->
                <section class="pt32 pb48">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-6">
                                <h2>Our Story</h2>
                                <p class="lead">Founded in 2024, Auto Voyage has been at the forefront of automotive service innovation.</p>
                                <p>We started with a simple mission: to make vehicle maintenance and repair services accessible, transparent, and hassle-free for everyone. Today, we're proud to serve thousands of customers across the country, connecting them with expert service providers who share our commitment to excellence.</p>
                            </div>
                            <div class="col-lg-6">
                                <img src="/auto_voyage/static/src/img/about-bg.jpg" class="img-fluid rounded shadow" alt="Our Story"/>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Our Mission Section -->
                <section class="pt48 pb48 bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2>Our Mission</h2>
                                <p class="lead">To revolutionize the automotive service industry through technology and customer-centric solutions</p>
                            </div>
                        </div>
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa fa-handshake-o fa-3x text-primary mb-3"></i>
                                        <h3 class="h5">Customer First</h3>
                                        <p>We prioritize our customers' needs and satisfaction above everything else.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa fa-cogs fa-3x text-primary mb-3"></i>
                                        <h3 class="h5">Quality Service</h3>
                                        <p>We ensure high-quality service through our network of certified professionals.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa fa-lightbulb-o fa-3x text-primary mb-3"></i>
                                        <h3 class="h5">Innovation</h3>
                                        <p>We continuously innovate to provide better solutions for our customers.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Our Values Section -->
                <section class="pt48 pb48">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2>Our Values</h2>
                                <p class="lead">The principles that guide everything we do</p>
                            </div>
                        </div>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fa fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h3 class="h5">Transparency</h3>
                                        <p>We believe in being open and honest with our customers about our services, pricing, and processes.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fa fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h3 class="h5">Reliability</h3>
                                        <p>We strive to be dependable and consistent in delivering our services.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fa fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h3 class="h5">Excellence</h3>
                                        <p>We maintain high standards in everything we do, from customer service to technical expertise.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fa fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h3 class="h5">Community</h3>
                                        <p>We value our community and work to build lasting relationships with our customers and partners.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Team Section -->
                <section class="pt48 pb48 bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-5">
                                <h2>Our Team</h2>
                                <p class="lead">Meet the people behind Auto Voyage</p>
                            </div>
                        </div>
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="card feature-card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <img src="/auto_voyage/static/src/img/default_avatar.png" class="rounded-circle mb-3" width="120" height="120" alt="CEO"/>
                                        <h3 class="h5">John Doe</h3>
                                        <span class="badge bg-primary text-white">CEO &amp; Founder</span>
                                        <p>With over 15 years of experience in the automotive industry.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card feature-card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <img src="/auto_voyage/static/src/img/default_provider.png" class="rounded-circle mb-3" width="120" height="120" alt="CTO"/>
                                        <h3 class="h5">Jane Smith</h3>
                                        <span class="badge bg-primary text-white">Chief Technology Officer</span>
                                        <p>Leading our technical innovation and digital transformation.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card feature-card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <img src="/auto_voyage/static/src/img/default_avatar.png" class="rounded-circle mb-3" width="120" height="120" alt="COO"/>
                                        <h3 class="h5">Mike Johnson</h3>
                                        <span class="badge bg-primary text-white">Chief Operations Officer</span>
                                        <p>Ensuring smooth operations and service delivery.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Call to Action -->
                <section class="pt48 pb48">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8 text-center">
                                <h2>Ready to Experience Better Vehicle Service?</h2>
                                <p class="lead mb-4">Join thousands of satisfied customers who trust Auto Voyage for their vehicle maintenance needs.</p>
                                <a href="/booking" class="btn btn-primary btn-lg">Book a Service Now</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo> 