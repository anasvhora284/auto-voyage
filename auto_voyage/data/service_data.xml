        <field name="icon">fa-spray-can</field>
        <field name="requires_appointment">True</field>
        <field name="requires_inspection">False</field>
        <field name="required_expertise">intermediate</field>
    </record>

    <!-- Advanced Services -->
    <record id="service_engine_diagnostic" model="auto.voyage.service">
        <field name="name">Engine Diagnostic</field>
        <field name="code">ENG001</field>
        <field name="category">repair</field>
        <field name="description">Complete engine diagnostic with computerized analysis.</field>
        <field name="duration">2.0</field>
        <field name="price">129.99</field>
        <field name="icon">fa-engine</field>
        <field name="requires_appointment">True</field>
        <field name="requires_inspection">True</field>
        <field name="required_expertise">specialist</field>
    </record>
